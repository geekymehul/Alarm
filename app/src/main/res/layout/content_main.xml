<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.developinggeek.alarm.MainActivity"
    tools:showIn="@layout/activity_main"
    android:padding="10dp"
    >


    <TimePicker
        android:id="@+id/alarm_timePicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="alarm on"
        android:layout_marginTop="5dp"
        android:id="@+id/alarm_on"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/alarm_timePicker"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="alarm off"
        android:id="@+id/alarm_off"
        android:layout_marginEnd="5dp"
        android:layout_alignTop="@+id/alarm_on"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="Status Of Alarm"
        android:layout_below="@+id/alarm_on"
        android:id="@+id/update_text"
        />

</RelativeLayout>
